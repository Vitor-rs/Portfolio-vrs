---
import { motion } from "framer-motion";

interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<motion.div animate={{ x: 100 }} />
<li class="link-card">
  <h1 class="text-3xl font-bold underline">Hello world!</h1>
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>

