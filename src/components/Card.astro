---
interface Props {
    name: string;
    technologies: string[];
    url: string;
}
const { name, technologies, url } = Astro.props;
---
<div class="card bg-card/50 hover:-translate-y-2 transition-all duration-500 p-4 rounded-lg">
    <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-xl font-bold text-card-foreground hover:text-primary transition-colors duration-300"
    >
        {name}
    </a>
    <ul class="mt-2 space-y-1">
        {technologies.map((tech) => (
                <li class="text-sm text-muted-foreground">{tech}</li>
        ))}
    </ul>
</div>